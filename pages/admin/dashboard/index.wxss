/* pages/admin/dashboard/index.wxss */
.admin-dashboard {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 数据概览 */
.data-overview {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.data-card {
  flex: 1;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.data-title {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.data-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.data-change {
  font-size: 24rpx;
  display: inline-block;
}

.up {
  color: #f5222d;
}

.down {
  color: #00a854;
}

/* 待办事项 */
.todo-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.todo-count {
  background-color: #1677ff;
  color: #fff;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
  font-size: 20rpx;
}

.todo-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.todo-item:last-child {
  border-bottom: none;
}

.todo-content {
  flex: 1;
}

.todo-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.todo-time {
  font-size: 24rpx;
  color: #666;
}

.handle-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0;
  background-color: #1677ff;
  color: #fff;
}

/* 趋势图表 */
.trend-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.trend-type {
  font-size: 28rpx;
  color: #1677ff;
}

.chart-container {
  width: 100%;
  height: 300rpx;
}

.trend-chart {
  width: 100%;
  height: 100%;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.action-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.action-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.action-item text {
  font-size: 26rpx;
  color: #333;
}