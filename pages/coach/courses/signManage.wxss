/* pages/coach/courses/signManage.wxss */
.sign-manage {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 课程信息 */
.course-info {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.course-time-venue {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.time, .venue {
  font-size: 26rpx;
  color: #666;
}

.quota-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

/* 签到二维码 */
.qr-code-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
}

.qr-code-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.qr-code {
  width: 300rpx;
  height: 300rpx;
  padding: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.qr-tip {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.sign-time {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 10rpx;
}

.time-item {
  display: flex;
  margin-bottom: 10rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
}

.time-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

/* 签到统计 */
.sign-stats {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding: 20rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1677ff;
  margin-bottom: 5rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 签到记录 */
.sign-records {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 20rpx;
  padding-bottom: 20rpx;
}

.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-btn {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #1677ff;
}

.filter-btn image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 5rpx;
}

.records-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.member-info {
  display: flex;
  align-items: center;
}

.member-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.member-phone {
  font-size: 24rpx;
  color: #666;
}

.sign-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.status-tag {
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.status-success {
  background-color: #e6f7ee;
  color: #00a854;
}

.status-partial {
  background-color: #fff7e6;
  color: #ff7d00;
}

.status-fail {
  background-color: #fee;
  color: #f5222d;
}

.sign-time-detail {
  font-size: 22rpx;
  color: #666;
  text-align: right;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty image {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty text {
  font-size: 28rpx;
  color: #999;
}

/* 刷新按钮 */
.refresh-btn {
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.refresh-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}