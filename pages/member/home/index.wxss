/* pages/member/home/index.wxss */
.member-home {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息 */
.user-info {
  background-color: #1677ff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
  border-radius: 0 0 30rpx 30rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  margin-left: 30rpx;
  flex: 1;
}

.user-name-role {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
}

.user-level {
  font-size: 26rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  margin-left: 15rpx;
}

.user-assets {
  display: flex;
}

.asset-item {
  margin-right: 40rpx;
}

.asset-value {
  font-size: 32rpx;
  font-weight: bold;
}

.asset-name {
  font-size: 26rpx;
  opacity: 0.8;
  margin-left: 5rpx;
}

.edit-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 快捷入口 */
.quick-entrance {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 30rpx 0;
  margin: 20rpx;
  border-radius: 20rpx;
}

.entrance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.entrance-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.entrance-item text {
  font-size: 26rpx;
  color: #333;
}

/* 通用区块标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.more-btn {
  font-size: 26rpx;
  color: #1677ff;
}

/* 推荐课程 */
.recommend-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding-bottom: 20rpx;
}

.course-list {
  padding: 0 20rpx;
}

.course-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-item:last-child {
  border-bottom: none;
}

.course-img {
  width: 200rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.course-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-coach {
  font-size: 24rpx;
  color: #666;
}

.course-time-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.course-time {
  font-size: 24rpx;
  color: #666;
}

.course-price {
  font-size: 28rpx;
  color: #ff5722;
  font-weight: bold;
}

.course-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.remaining-quota {
  font-size: 24rpx;
  color: #888;
}

/* 活动公告 */
.activity-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding-bottom: 20rpx;
}

.activity-list {
  padding: 0 30rpx;
}

.activity-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-title {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.activity-time {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}