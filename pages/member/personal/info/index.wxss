/* pages/member/personal/info/index.wxss */
.personal-info {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头像区域 */
.avatar-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.change-avatar {
  width: auto;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #f0f0f0;
  color: #666;
}

/* 信息项通用样式 */
.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-label {
  width: 160rpx;
  font-size: 30rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

/* 基本信息 */
.basic-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
}

.edit-btn {
  width: auto;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  background-color: #1677ff;
  color: #fff;
}

.level {
  font-weight: bold;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.level.gold {
  background-color: #fff7e6;
  color: #ff7d00;
}

.level.platinum {
  background-color: #e6f7ff;
  color: #1890ff;
}

.level.diamond {
  background-color: #f6efff;
  color: #722ed1;
}

.level-progress {
  font-size: 24rpx;
  color: #888;
  margin-left: 10rpx;
}

/* 详细信息 */
.detail-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.gender-option {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #333;
}

/* 按钮区域 */
.btn-section {
  padding: 0 20rpx;
}

.save-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 45rpx;
  margin-bottom: 20rpx;
}

.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  background-color: #f5f5f5;
  color: #f5222d;
  border-radius: 45rpx;
}