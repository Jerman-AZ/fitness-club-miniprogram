/* pages/member/training/dataTrack/index.wxss */
.training-data-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 30rpx;
}

/* 数据概览 */
.data-overview {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  gap: 20rpx;
}

.overview-item {
  flex: 1;
  min-width: calc(50% - 20rpx);
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.item-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

/* 图表区域 */
.chart-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.chart-container {
  width: 100%;
  height: 300rpx;
}

.chart {
  width: 100%;
  height: 100%;
}

/* 运动数据 */
.sport-data {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.bind-btn {
  font-size: 26rpx;
  color: #1677ff;
  background-color: transparent;
  padding: 0;
  height: auto;
  line-height: normal;
}

.data-card {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
}

.data-card:last-child {
  margin-bottom: 0;
}

.data-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.data-value {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 15rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #eee;
  border-radius: 6rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background-color: #1677ff;
  border-radius: 6rpx;
}

.steps-reward {
  font-size: 24rpx;
  color: #1677ff;
}

.status-tag {
  display: inline-block;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status-tag.success {
  background-color: #e6f7ee;
  color: #00b42a;
}

.status-tag.warning {
  background-color: #fff7e6;
  color: #ff7d00;
}

/* 训练记录 */
.records-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.records-list {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.record-info {
  flex: 1;
}

.record-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 5rpx;
  display: block;
}

.record-date, .record-duration {
  font-size: 24rpx;
  color: #666;
  display: block;
}

.record-status {
  font-size: 26rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.record-status.completed {
  background-color: #e6f7ee;
  color: #00b42a;
}

.record-status.pending {
  background-color: #f0f7ff;
  color: #1677ff;
}