<view class="login-container">
  <view class="logo">
    <image src="/images/common/logo.png" mode="widthFix"></image>
    <text class="title">***健身俱乐部会员系统</text>
  </view>
  
  <view class="form-container">
    <view class="input-item">
      <text class="label">手机号</text>
      <input 
        type="number" 
        placeholder="请输入手机号" 
        value="{{phone}}"
        bindinput="handlePhoneInput"
        maxlength="11"
      ></input>
    </view>
    
    <view class="input-item verify-code">
      <text class="label">验证码</text>
      <input 
        type="number" 
        placeholder="请输入验证码" 
        value="{{verifyCode}}"
        bindinput="handleVerifyCodeInput"
        maxlength="6"
      ></input>
      <button 
        class="get-code-btn" 
        bindtap="getVerifyCode"
        disabled="{{countdown > 0 || !phone}}"
      >
      {{countdown > 0 ? (countdown + 's后重新获取') : '获取验证码'}}
      </button>
    </view>
    
    <view class="role-select">
      <text class="role-label">登录角色：</text>
      <radio-group bindchange="handleRoleChange" value="{{role}}">
        <label class="role-item">
          <radio value="member" />会员
        </label>
        <label class="role-item">
          <radio value="coach" />教练
        </label>
        <label class="role-item">
          <radio value="admin" />管理员
        </label>
      </radio-group>
    </view>
    
    <button 
      class="login-btn" 
      bindtap="handleLogin"
      disabled="{{!phone || !verifyCode || !role}}"
    >
      登录
    </button>
  </view>
</view>