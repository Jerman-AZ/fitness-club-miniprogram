.login-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 50rpx 30rpx;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.label {
  width: 140rpx;
  font-size: 32rpx;
  color: #666;
}

.input-item input {
  flex: 1;
  font-size: 32rpx;
  padding: 10rpx 0;
}

.verify-code {
  position: relative;
}

.get-code-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0;
  background-color: #f0f0f0;
  color: #666;
}

.get-code-btn:not([disabled]) {
  background-color: #1677ff;
  color: #fff;
}

.role-select {
  margin: 40rpx 0;
}

.role-label {
  display: block;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #666;
}

.role-item {
  display: inline-block;
  margin-right: 40rpx;
  font-size: 32rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  background-color: #1677ff;
  color: #fff;
  border-radius: 45rpx;
  margin-top: 30rpx;
}

.login-btn[disabled] {
  background-color: #99c8ff;
}